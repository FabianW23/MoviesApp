<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_app_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/splash_title</item>
        <item name="fontFamily">@font/anton</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/logo_title_60sp</item>
    </style>
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>
    <style name="small_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
    </style>
    <style name="big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="small_black_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="login_12sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="login_edit_texts">
        <item name="android:layout_width">@dimen/dimen_300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
        <item name="android:paddingEnd">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
    </style>
    <style name="yellow_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:background">@drawable/shape_rectangle_curved_corners</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>
    <style name="login_button" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">@dimen/dimen_300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:background">@drawable/shape_rectangle_curved_corners</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>
    <style name="fab">
        <item name="android:layout_width">@dimen/dimen_50dp</item>
        <item name="android:layout_height">@dimen/dimen_50dp</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="maxImageSize">@dimen/dimen_40dp</item>
    </style>
    <style name="text_view_logo">
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">@dimen/dimen_72dp</item>
        <item name="android:background">@drawable/shape_rectangle_curved_corners</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:text">@string/splash_title</item>
        <item name="android:fontFamily">@font/anton</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_37sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="register_edit_texts" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:layout_width">@dimen/dimen_300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_10dp</item>
    </style>
    <style name="register_password_edit_texts" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:layout_width">@dimen/dimen_300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="expandedHintEnabled">false</item>
        <item name="endIconMode">password_toggle</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_10dp</item>
    </style>
    <style name="menu_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:background">@drawable/shape_menu</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>
    <style name="menu_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background" />
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="bottom_navigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_2dp</item>
        <item name="android:background">@color/light_gray_divider</item>
    </style>
    <style name="big_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_16dp</item>
        <item name="android:background">@color/light_gray_divider</item>
    </style>
    <style name="search_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:background">@drawable/shape_rectangle_curved_corners</item>
    </style>
    <style name="bullet_point" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/dimen_8dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/shape_rectangle_curved_corners</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>
    <style name="genre_chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/light_gray_divider</item>
        <item name="chipCornerRadius">@dimen/dimen_6dp</item>
        <item name="barrierMargin">@dimen/dimen_8dp</item>
        <item name="chipStrokeWidth">@dimen/dimen_2dp</item>
    </style>
    <style name="movie_details_toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
    </style>
</resources>